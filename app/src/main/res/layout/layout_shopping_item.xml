<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/img_shopping_item"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_image_black_24dp" />

        <TextView
            android:id="@+id/txt_name_shopping_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bellerose"
            android:text="Hair Style Wax"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/txt_price_shopping_item"
                android:layout_width="0dp"
                android:text="$20"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/bellerose"
                android:gravity="left"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:drawableRight="@drawable/ic_shopping_cart_black_24dp"
                android:textColor="@android:color/background_dark"
                android:fontFamily="@font/bellerose"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                 android:text="     "/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>